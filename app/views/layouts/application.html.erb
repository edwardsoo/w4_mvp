<!DOCTYPE html>
<html>
	<head>
		<title>W4Mvp</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application.js" %>
		<%= yield :javascript_includes %>
		<%= csrf_meta_tags %>
	</head>
	<body style="margin:0">
		<div id="user_nav" align="right" style="margin-top: 10px; margin-right: 10px;">
			<% if current_user %>
			<%= image_tag(current_user.profileImage, :border => 0) %>
			<%= current_user.name %>
			<%= link_to "Sign Out", signout_path %>
			<% else %>
			
			<%= link_to image_tag("sign-in-with-twitter-gray.png", :border => 0), '/auth/twitter' %>
			<% end %>
		</div>
		<%= yield %>

	</body>
</html>
